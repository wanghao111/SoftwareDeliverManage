    </resultMap>

    <sql id="table_name">
        work_flow
    </sql>

    <sql id="create_set_value">
        <set>
            <trim suffixOverrides=",">
                <if test="code != null">
                    code = #{code,jdbcType=VARCHAR},
                </if>
                <if test="title != null">
                    title = #{title,jdbcType=VARCHAR},
                </if>
                <if test="isEnable != null">
                    is_enable = #{isEnable,jdbcType=TINYINT},
                </if>
                <if test="status != null">
                    status = #{status,jdbcType=TINYINT},
                </if>
            </trim>
        </set>
    </sql>

    <sql id="update_set_value">
        <set>
            <trim suffixOverrides=",">
                <if test="title != null">
                    title = #{title,jdbcType=VARCHAR},
                </if>
                <if test="isEnable != null">
                    is_enable = #{isEnable,jdbcType=TINYINT},
                </if>
                <if test="status != null">
                    status = #{status,jdbcType=TINYINT},
                </if>
            </trim>
        </set>
    </sql>

    <insert id="create" parameterType="com.software.deliver.dal.vo.WorkFlowVO" useGeneratedKeys="true" keyProperty="id">
        insert into <include refid="table_name"/> <include refid="create_set_value"/>
    </insert>

    <update id="update" parameterType="com.software.deliver.dal.vo.WorkFlowVO">
        update <include refid="table_name"/> <include refid="update_set_value"/> where code=#{code} limit 1
    </update>

    <update id="delete">
        delete from <include refid="table_name"/> where code=#{code} limit 1
    </update>

