<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.software.deliver.dal.mapper.WorkFlowInstanceDao">


    <resultMap id="BaseResultMap" type="com.software.deliver.dal.vo.WorkFlowInstanceVO">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="work_flow_id" jdbcType="BIGINT" property="workFlowId" />
        <result column="work_flow_code" jdbcType="VARCHAR" property="workFlowCode" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="submit_user_id" jdbcType="BIGINT" property="submitUserId" />
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
        <result column="update_at" jdbcType="TIMESTAMP" property="updateAt" />
    </resultMap>

    <sql id="table_name">
        work_flow_instance
    </sql>

    <sql id="create_set_value">
        <set>
            <trim suffixOverrides=",">
                <if test="workFlowId != null">
                    work_flow_id = #{workFlowId,jdbcType=BIGINT},
                </if>
                <if test="workFlowCode != null">
                    work_flow_code = #{workFlowCode,jdbcType=VARCHAR},
                </if>
                <if test="title != null">
                    title = #{title,jdbcType=VARCHAR},
                </if>
                <if test="submitUserId != null">
                    submit_user_id = #{submitUserId,jdbcType=BIGINT},
                </if>
            </trim>
        </set>
    </sql>


    <insert id="create" parameterType="com.software.deliver.dal.vo.WorkFlowInstanceVO" useGeneratedKeys="true" keyProperty="id">
        insert into <include refid="table_name"/> <include refid="create_set_value"/>
    </insert>

</mapper>